@page
@model PropertyManagement.Pages.Properties.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Properties</h1>

<p>
    <a asp-page="Create">
        <i class="fa-solid fa-circle-plus" style="font-size: xxx-large;"></i>
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].AddressLine1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].AddressLine2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].Province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].TotalUnits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].TotalVacantUnits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].PropertyType.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Property) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Province)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalUnits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalVacantUnits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PropertyType.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">View</a>
            </td>
        </tr>
}
    </tbody>
</table>
