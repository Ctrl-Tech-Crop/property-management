@model data.models.Property

<div class="row mb-3">
    <div class="col-md-4">
        <p>
            <button id="viewPropertyDetailsToggleBtn" class="btn btn-primary" type="button" data-toggle="collapse" data-target="#propertyCollapsePanel" aria-expanded="false" aria-controls="propertyCollapsePanel">Show property details</button>
        </p>
    </div>
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="collapse multi-collapse" id="propertyCollapsePanel">
                <div class="card card-body">
                    <div class="mt-2">
                        <h3>Property details</h3>
                        <hr />

                        <div class="flex">
                            <div class="w-50">
                                @await Html.PartialAsync("Partials/_PropertyInfo", Model)
                            </div>
                            <div class="w-50">
                                @await Html.PartialAsync("Partials/_PropertyAdditionalInfo", Model)
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>