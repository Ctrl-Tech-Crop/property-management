@model data.models.Tenant

<div class="row mb-3">
    <div class="col-md-4">
        <p>
            <button id="viewTenantDetailsToggleBtn" class="btn btn-primary" type="button" data-toggle="collapse" data-target="#tenantCollapsePanel" aria-expanded="false" aria-controls="propertyCollapsePanel">Show tenant details</button>
        </p>
    </div>
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="collapse multi-collapse" id="tenantCollapsePanel">
                <div class="card card-body">
                    <div class="mt-2">
                        <h3>Tenant details</h3>
                        <hr />
                        <div class="flex">
                            <div class="w-50">
                                @await Html.PartialAsync("Partials/_TenantInfoPartial", Model)
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>