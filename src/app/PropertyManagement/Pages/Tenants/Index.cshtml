            <th>
                @Html.DisplayNameFor(model => model.Tenant[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tenant[0].Standing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tenant[0].EmergencyContactName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tenant[0].EmergencyContactPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tenant[0].EmergencyContactEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tenant[0].ParkingStall)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tenant[0].MailingAddressLine1)
